<resources>
    <!-- MainActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- PhotoActivity application theme. -->
    <style name="PhotoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryPhoto</item>
        <item name="colorAccent">@color/colorAccentPhotoActivity</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Customize color of back arrow -->
    <style name="PhotoToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccentPhotoActivity</item>
    </style>
</resources>
